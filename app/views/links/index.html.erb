<% if flash[:warning] %><%= flash[:warning] -%><% end %>

<%= form_for @link,
    :url => { :controller => :links, :action => "create" } do |f| %>
  <div class="ui-widget-header ui-corner-top">
    <%= t ".create_url" %>
  </div>
  <div class="ui-widget-content">
    <div class="link url">
      <%= f.label :url, :class => "link url" %>
      <%= f.url_field :url, :class => "url input ui-corner-all" %>
    </div>
    <div class="link" title="Only for signin users.">
      <%= f.label :domain, :class => "link domain ui-state-disabled" %>
      <%= f.select :domain, @domains, {}, { :class => "select ui-state-disabled ui-corner-all" } %>
    </div>
    <div class="link">
      <span id="generator"><%= t ".generate_name" %>
        <%= link_to t( ".tiny" ), tokens_path( "type" => "tiny" ),
            :id => "link_tiny", :method => :post, :remote => true %>
        <%= t ".or" %>
        <%= link_to t( ".hugy" ), tokens_path( "type" => "hugy" ),
            :id => "link_hugy", :method => :post, :remote => true %>
      </span>
    </div>
    <div class="link" title="Only for signin users.">
      <%= f.label :token, :class => "link token ui-state-disabled" %>
      <%= f.text_field :token, :class => "token input ui-corner-all ui-state-disabled", :disabled => true %>
    </div>
    <div class="link" title="Only for signin users.">
      <%= f.label :tags, :class => "link tags ui-state-disabled" %>
      <%= f.text_field :tags, :class => "tags input ui-corner-all ui-state-disabled", :value => "", :disabled => true %>
      <div title="Clear" class="ui-corner-all ui-state-default ui-state-disabled">
        <a href="#" class="ui-icon ui-icon-trash"></a>
      </div>
    </div>
    <div class="link" title="Only for signin users.">
      <%= f.check_box :private, :class => "private check_box_right ui-corner-all", :disabled => true %>
      <%= f.label :private, :class => "link private ui-state-disabled", :id => "chbox" %>
    </div>
    <div class="link" title="Only for signin users.">
      <%= f.check_box :statistic, :class => "statistic check_box_right ui-corner-all", :disabled => true %>
      <%= f.label :statistic, :class => "link statistic ui-state-disabled", :id => "chbox" %>
    </div>

  </div>
  <div class="ui-widget-header">
    <%= t ".here_is_your_url" %>
  </div>
  <div class="ui-widget-content">
    <div class="link result">
      <span id="result_url"> </span>
    </div>
    <div class="link">
      <%= submit_tag :save, :class => "save" -%>
    </div>
  </div>

  <div class="ui-widget-header ui-corner-bottom" style="height: 40.5px;"></div>

<% end %>


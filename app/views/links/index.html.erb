<% if flash[:warning] %><%= flash[:warning] -%><% end %>

<%= form_for @link,
    :url => { :controller => :links, :action => "create" }  do |f| %>
  <%= render "shared/div_null" %>
  <div class="context ui-widget-content">
    <h2><%= t ".create_url" %></h2>

    <%= f.label :url, :class => "url error", :generated => "true" %>
    <%= f.label :url, :class => "link url" %>
    <%= f.url_field :url, :class => "url" %>
    <br />

    <%= f.label :domain, :class => "link domain disable" %>
    <%= f.select :domain, @domains, {}, { :class => "round", :disabled => true } %>
    <div class="check ui-widget" id="domain_check">
      <div style="padding: 0pt 0.7em;" class="ui-state-error ui-corner-all">
        <p>
          <span style="float: left; margin-right: 0.3em;" class="ui-icon ui-icon-alert"></span>
          For registered users only.
        </p>
      </div>
    </div>
    <br />

    <span id="generator"><%= t ".generate_name" %>
      <%= link_to t( ".tiny" ), tokens_path( "type" => "tiny" ),
          :id => "link_tiny", :method => :post, :remote => true %>
      <%= t ".or" %>
      <%= link_to t( ".hugy" ), tokens_path( "type" => "hugy" ),
          :id => "link_hugy", :method => :post, :remote => true %>
    </span>
    <br />

    <%= f.label :token, :class => "link token disable" %>
    <%= f.text_field :token, :class => "token round", :disabled => true %>
    <br />
    <%= f.label :tags, :class => "link tags disable" %>
    <%= f.text_field :tags, :class => "tags round", :disabled => true, :value => "" %>
    <a href="#">
      <li title="Clear" class="ui-state-default ui-corner-all">
        <span class="ui-icon ui-icon-trash"></span>
      </li>
    </a>
    <br />
    <%= f.check_box :private, :class => "private check_box_right", :disabled => true %>
    <%= f.label :private, :class => "link private disable", :id => "chbox" %>
    <br />
    <%= f.check_box :statistic, :class => "statistic check_box_right", :disabled => true %>
    <%= f.label :statistic, :class => "link statistic disable", :id => "chbox" %>
    <br />

  </div>
  <%= render "shared/div_null" %>
  <div class="context">
    <h2><%= t ".here_is_your_url" %></h2>
    <span id="result_url"></span>
    <br />
    <%= submit_tag :save, :class => "button_save" -%>
    <br />
    <br />
  </div>
  <%= render "shared/div_null" %>
<% end %>

